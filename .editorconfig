# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
# General settings for all files
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

# Settings specific to C source and header files
[*.{c,h}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 8

